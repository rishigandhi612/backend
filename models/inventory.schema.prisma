// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

// Define the Inventory model
model Inventory {
  id          String   @id @default(uuid())
  productId   String   // Reference to MongoDB product ID
  width       Float?   // Optional width
  netWeight   Float    // Required net weight
  grossWeight Float?   // Optional gross weight
  rollId      String   // Required roll ID
  micron      Float?   // Optional micron
  mtr         Float?   // Optional meter
  type        String   @default("film") // Options: "film" or "non-film"
  status      String   @default("available") // Options: "damaged", "available", "reserved"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([rollId])
  @@index([status])
}