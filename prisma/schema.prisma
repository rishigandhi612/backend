// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DIRECT_URL")
}

// Define the Inventory model
model Inventory {
  id          String   @id @default(uuid())
  productId   String   // Reference to MongoDB product ID
  width       Float?   // Optional width
  netWeight   Float    // Required net weight
  grossWeight Float?   // Optional gross weight
  rollId      String   @unique // Required roll ID
  micron      Float?   // Optional micron
  mtr         Float?   // Optional meter
  type        String   @default("film") // Options: "film" or "non-film"
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  status        String    @default("available") // damaged, available, reserved, sold
  invoiceNumber String?   
  soldAt        DateTime? // Timestamp when item was sold

  @@index([productId])
  @@index([rollId])
  @@index([status])
}
// Define the Transaction model
model Transaction {
  id              String   @id @default(uuid())
  transactionId   String   @unique

  customerId      String
  bankId          String
  bankName        String

  transactionType TransactionType
  voucherType     VoucherType

  totalAmount     Decimal  @db.Decimal(10,2)

  paymentMethod   String
  paymentStatus   String

  reference       String?
  remarks         String?

  transactionDate DateTime 
  createdBy       String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  allocations     TransactionAllocation[]
  ledgerEntries   CustomerLedger[]

  @@index([customerId])
  @@index([transactionType])
}

enum TransactionType {
  ADVANCE
  AGAINST_REF
  ON_ACCOUNT
  REFUND
}

enum VoucherType {
  RECEIPT
  PAYMENT
  CONTRA
  JOURNAL
}
model TransactionAllocation {
  id               String   @id @default(uuid())
  transactionId    String
  invoiceNumber    String
  allocatedAmount  Decimal  @db.Decimal(10,2)

  transaction Transaction @relation(fields: [transactionId], references: [id])

  @@index([invoiceNumber])
}
model CustomerLedger {
  id              String   @id @default(uuid())
  customerId      String
  transactionId   String?
  transactionDate DateTime
  debit           Decimal  @db.Decimal(10, 2) @default(0)
  credit          Decimal  @db.Decimal(10, 2) @default(0)
  balanceAfter    Decimal  @db.Decimal(10, 2)
  narration       String
  referenceType   String?  // "TRANSACTION" | "INVOICE" | "OPENING_OUTSTANDING" | "ADJUSTMENT"
  referenceId     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  transaction Transaction? @relation(fields: [transactionId], references: [id], onDelete: Cascade)

  @@index([customerId, transactionDate, createdAt])
  @@index([customerId])
  @@index([transactionDate])
  @@index([transactionId])
  @@index([referenceType, referenceId])
  @@map("customer_ledger")
}
// Add to your schema for better tracking
model TransactionLog {
  id            String   @id @default(uuid())
  transactionId String
  action        String   // created, updated, deleted
  changes       Json?    // Store what changed
  userId        String?
  timestamp     DateTime @default(now())
  
  @@index([transactionId])
}