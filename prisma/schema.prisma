generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inventory {
  id          String   @id @default(uuid())
  productId   String
  width       Float?
  netWeight   Float
  grossWeight Float?
  rollId      String
  micron      Float?
  mtr         Float?
  type        String   @default("film")
  status      String   @default("available")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([productId])
  @@index([rollId])
  @@index([status])
}
